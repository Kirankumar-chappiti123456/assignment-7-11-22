#include <stdio.h>
#include<stdlib.h>
int main()
{
    int *arr;
    int n;

    printf("enter the size of array:");
    scanf("%d",&n);
    arr=(int *)malloc(n*sizeof(int));
    for(int i=0;i<n;i++)
    {
        
    printf("enter the student marks :%d",i);
    scanf("%d",&arr[i]);
    }
    for(int i=0;i<n;i++)
    {
        printf("%d",arr[i]);
    }
}
